  <h2>Follow Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
      <tr>
        <td><%= attachment_image_tag u, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= u.name %></td>
        <td><%= link_to "Show", user_path(u.id) %></td>
      </tr>
      <% end %>
    </tbody>
   </table>
